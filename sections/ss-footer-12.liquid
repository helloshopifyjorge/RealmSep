    .footer-column-text-{{ section.id }} * {
      font-family: {{ column_text_font.family }}, {{ column_text_font.fallback_families }};
      font-weight: {{ column_text_font.weight }};
      font-style: {{ column_text_font.style }};
    }
  </style>
{% endif %}

{% if bottom_link_custom %}
  <style>
    .footer-menu-{{ section.id }} li a {
      font-family: {{ bottom_link_font.family }}, {{ bottom_link_font.fallback_families }};
      font-weight: {{ bottom_link_font.weight }};
      font-style: {{ bottom_link_font.style }};
    }
  </style>
{% endif %}

{% if copy_custom %}
  <style>
    .footer-copy-text-{{ section.id }} * {
      font-family: {{ copy_font.family }}, {{ copy_font.fallback_families }};
      font-weight: {{ copy_font.weight }};
      font-style: {{ copy_font.style }};
    }
  </style>
{% endif %}

{% if scrolling_text_reverse_direction %}
  <style>
    @keyframes ticker{{ section.id | replace: '-', '' }} {
      0% {
        transform: translateX(-50%);
      }
      100% {
        transform: translateX(0%);
      }
    }
  </style>
{% else %}
  <style>
    @keyframes ticker{{ section.id | replace: '-', '' }} {
      0% {
        transform: translateX(0%);
      }
      100% {
        transform: translateX(-50%);
      }
    }
  </style>
{% endif %}

{% if scrolling_image_reverse_direction %}
  <style>
    @keyframes tickerImage{{ section.id | replace: '-', '' }} {
      0% {
        transform: translateX(-50%);
      }
      100% {
        transform: translateX(0%);
      }
    }
  </style>
{% else %}
  <style>
    @keyframes tickerImage{{ section.id | replace: '-', '' }} {
      0% {
        transform: translateX(0%);
      }
      100% {
        transform: translateX(-50%);
      }
    }
  </style>
{% endif %}

{% if scrolling_image_ratio_mobile == "portrait" %}
	<style>
    .footer-scrolling-image-{{ section.id }} {
      aspect-ratio: 9.6/14;
    }
	</style>
{% elsif scrolling_image_ratio_mobile == "landscape" %}
	<style>
    .footer-scrolling-image-{{ section.id }} {
      aspect-ratio: 12/6;
    }
	</style>
{% elsif scrolling_image_ratio_mobile == "square" %}
	<style>
    .footer-scrolling-image-{{ section.id }} {
      aspect-ratio: 12/12;
    }
	</style>
{% else %}
	<style>
    .footer-scrolling-image-{{ section.id }} {
      aspect-ratio: auto;
    }
	</style>
{% endif %}

{% if scrolling_image_ratio == "portrait" %}
	<style>
    @media (min-width: 1024px) {
        .footer-scrolling-image-{{ section.id }} {
          aspect-ratio: 9.6/14;
        }
    }
	</style>
{% elsif scrolling_image_ratio == "landscape" %}
	<style>
    @media (min-width: 1024px) {
        .footer-scrolling-image-{{ section.id }} {
          aspect-ratio: 12/6;
        }
