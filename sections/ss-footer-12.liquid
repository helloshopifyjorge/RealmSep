{%- style -%}

  {{ scrolling_text_font | font_face: font_display: 'swap' }}
  {{ scrolling_bottom_text_font | font_face: font_display: 'swap' }}
  {{ column_heading_font | font_face: font_display: 'swap' }}
  {{ link_font | font_face: font_display: 'swap' }}
  {{ bottom_link_font | font_face: font_display: 'swap' }}
  {{ copy_font | font_face: font_display: 'swap' }}
  {{  column_text_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .footer-top-{{ section.id }} {
    display: flex;
    flex-direction: column;
  }

  .footer-left-{{ section.id }} {
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1 0;
    overflow: hidden;
  }

  .footer-scrolling-wrap-{{ section.id }} {
    position: relative;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    overflow: hidden;
    -ms-flex-wrap: nowrap;
    flex-wrap: nowrap;
    background-attachment: scroll !important;
    text-decoration: none;
    margin-left: -{{ padding_horizontal_mobile }}rem;
  }

  .footer-scrolling-list-{{ section.id }} {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    white-space: nowrap;
    background-attachment: scroll !important;
    flex-shrink: 0;
  }

  .footer-scrolling-text-wrap-{{ section.id }} .footer-scrolling-list-{{ section.id }} {
    -webkit-animation: ticker{{ section.id | replace: '-', '' }} {{ scrolling_text_velocity_mobile }}s infinite linear;
    animation: ticker{{ section.id | replace: '-', '' }} {{ scrolling_text_velocity_mobile }}s infinite linear;
  }

  .footer-scrolling-image-wrap-{{ section.id }} .footer-scrolling-list-{{ section.id }} {
    -webkit-animation: tickerImage{{ section.id | replace: '-', '' }} {{ scrolling_image_velocity_mobile }}s infinite linear;
    animation: tickerImage{{ section.id | replace: '-', '' }} {{ scrolling_image_velocity_mobile }}s infinite linear;
  }

  .footer-scrolling-item-{{ section.id }} {
    display: flex;
    align-items: center;
    background-attachment: scroll !important;
    flex-shrink: 0;
  }

  .footer-scrolling-text-wrap-{{ section.id }} {
    padding: {{ scrolling_text_padding_vertical_mobile }}px 0px;
  }

  .footer-scrolling-text-wrap-{{ section.id }} .footer-scrolling-item-{{ section.id }} {
    margin-right: {{ scrolling_text_gap_mobile }}px;
  }

  .footer-scrolling-image-wrap-{{ section.id }} {
    padding: {{ scrolling_image_padding_vertical_mobile }}px 0px;
  }

  .footer-scrolling-text-wrap-{{ section.id }} + .footer-scrolling-image-wrap-{{ section.id }} {
    border-top: {{ scrolling_images_border_thickness }}px solid {{ scrolling_images_border_color }};
  }

  .footer-scrolling-image-wrap-{{ section.id }} .footer-scrolling-item-{{ section.id }} {
    margin-right: {{ scrolling_image_gap_mobile }}px;
  }

  .footer-scrolling-text-{{ section.id }} {
    display: inline-block;
    margin: 0;
    font-size: {{ scrolling_text_size_mobile }}px;
    color: {{ scrolling_text_color }};
    line-height: {{ scrolling_text_height }}%;
    text-transform: unset;
    margin-right: {{ scrolling_text_gap_mobile }}px;
    transition: all 0.25s ease 0s;
    text-decoration: none;
  }

  .footer-scrolling-image-{{ section.id }} {
    overflow: hidden;
    border-radius: {{ scrolling_image_radius }}px;
    border: {{ scrolling_image_border_thickness }}px solid {{ scrolling_image_border_color }};
    width: {{ scrolling_image_width_mobile }}px;
    flex-shrink: 0;
  }

  .footer-scrolling-image-{{ section.id }} img,
  .footer-scrolling-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .footer-scrolling-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .footer-right-{{ section.id }} {
    flex: 1 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .footer-left-{{ section.id }} + .footer-right-{{ section.id }} {
    border-top: {{ block_border_thickness }}px solid {{ block_border_color }};
  }

  .footer-column-heading-{{ section.id }} {
    margin: 0;
    font-size: {{ column_heading_size_mobile }}px;
    color: {{ column_heading_color }};
    line-height: {{ column_heading_height }}%;
    text-transform: unset;
    text-decoration: none;
    font-weight: 700;
  }

  .footer-menu-list-{{ section.id }},
  .footer-social-list-{{ section.id }} {
    padding: 0px;
    margin: 0px;
    display: flex;
    flex-direction: column;
    gap: {{ list_gap_mobile }}px;
    margin-top: {{ list_mt_mobile }}px;
    list-style: none;
  }

  .footer-menu-item-{{ section.id }},
  .footer-social-item-{{ section.id }} {
    line-height: 100%;
  }

  .footer-menu-link-{{ section.id }},
  .footer-social-link-{{ section.id }} {
    margin: 0;
    font-size: {{ link_size_mobile }}px;
    color: {{ link_color }};
    line-height: {{ link_height }}%;
    text-transform: unset;
    text-decoration: none;
  }

  .footer-social-link-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .footer-social-link-{{ section.id }} svg {
    display: block;
    width: 20px;
    height: 20px;
  }

  .footer-social-link-{{ section.id }} svg path {
    fill: {{ link_color }};
    transition: all 0.25s ease 0s;
  }

  .footer-column-text-{{ section.id }} {
    margin-top: {{ column_text_mt_mobile }}px;
  }

  .footer-column-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ column_text_size_mobile }}px;
    color: {{ column_text_color }};
    line-height: {{ column_text_height }}%;
    text-transform: unset;
    text-decoration: none;
  }

  .footer-column-text-{{ section.id }} *:not(:first-child) {
    margin-top: 10px;
  }

  .footer-bottom-{{ section.id }} {
    padding: {{ bottom_padding_vertical_mobile }}px {{ bottom_padding_horizontal_mobile }}px;
    border-top: {{ block_border_thickness }}px solid {{ block_border_color }};
  }

  .footer-copy-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ copy_size_mobile }}px;
    color: {{ copy_color }};
    line-height: {{ copy_height }}%;
    text-transform: unset;
    text-decoration: none;
  }

  .footer-copy-text-{{ section.id }} a:hover {
    text-decoration: underline;
  }

  .footer-columns-{{ section.id }} {
    display: flex;
    gap: {{ menu_gap_mobile }}px;
    flex-wrap: wrap;
  }

  .footer-menu-{{ section.id }} {
    margin-top: 10px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    width: 100%;
    list-style: none;
    padding: 0px;
  }

  .footer-menu-{{ section.id }} li a {
    margin: 0;
    font-size: {{ bottom_link_size_mobile }}px;
    color: {{ bottom_link_color }};
    line-height: {{ bottom_link_height }}%;
    text-transform: unset;
    text-decoration: none;
    transition: all 0.25s ease 0s;
  }

  .footer-menu-{{ section.id }} li a:hover {
    color: {{ bottom_link_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .footer-bottom-row-{{ section.id }} {
    margin-top: {{ bottom_menu_mt_mobile }}px;
    display: flex;
    justify-content: space-between;
    gap: 20px;
    flex-direction: column-reverse;
  }

  .footer-bottom-right-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 20px;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .footer-top-{{ section.id }} {
      flex-direction: row;
    }

    .footer-scrolling-wrap-{{ section.id }} {
      margin-left: -{{ padding_horizontal }}rem;
    }

    .footer-scrolling-text-wrap-{{ section.id }} .footer-scrolling-list-{{ section.id }} {
      animation-duration: {{ scrolling_text_velocity }}s;
    }
  
    .footer-scrolling-image-wrap-{{ section.id }} .footer-scrolling-list-{{ section.id }} {
      animation-duration: {{ scrolling_image_velocity }}s;
    }

    .footer-scrolling-text-wrap-{{ section.id }} .footer-scrolling-item-{{ section.id }} {
      margin-right: {{ scrolling_text_gap }}px;
    }

    .footer-scrolling-image-wrap-{{ section.id }} {
      padding: {{ scrolling_image_padding_vertical }}px 0px;
    }

    .footer-scrolling-text-wrap-{{ section.id }} {
      padding: {{ scrolling_text_padding_vertical }}px 0px;
    }
  
    .footer-scrolling-image-wrap-{{ section.id }} .footer-scrolling-item-{{ section.id }} {
      margin-right: {{ scrolling_image_gap }}px;
    }
    
    .footer-scrolling-text-{{ section.id }} {
      font-size: {{ scrolling_text_size }}px;
      margin-right: {{ scrolling_text_gap }}px;
    }

    .footer-scrolling-text-{{ section.id }}:hover {
      color: {{ scrolling_text_hover_color }};
      transition: all 0.25s ease 0s;
    }

    .footer-left-{{ section.id }} + .footer-right-{{ section.id }} {
      border-top: 0px;
      border-left: {{ block_border_thickness }}px solid {{ block_border_color }};
    }

    .footer-columns-{{ section.id }} {
      gap: {{ menu_gap }}px;
    }

    .footer-columns-{{ section.id }} > * {
      flex: 1 0;
    }

    .footer-column-heading-{{ section.id }} {
      font-size: {{ column_heading_size }}px;
    }

    .footer-menu-list-{{ section.id }},
    .footer-social-list-{{ section.id }}{
      gap: {{ list_gap }}px;
      margin-top: {{ list_mt }}px;
    }

    .footer-menu-link-{{ section.id }},
    .footer-social-link-{{ section.id }} {
      font-size: {{ link_size }}px;
      transition: all 0.25s ease 0s;
    }

    .footer-menu-link-{{ section.id }}:hover,
    .footer-social-link-{{ section.id }}:hover {
      transition: all 0.25s ease 0s;
      color: {{ link_hover_color }};
    }

    .footer-social-link-{{ section.id }}:hover svg path {
       fill: {{ link_hover_color }};
       transition: all 0.25s ease 0s;
    }

    .footer-bottom-{{ section.id }} {
      padding: {{ bottom_padding_vertical }}px {{ bottom_padding_horizontal }}px;
    }

    .footer-copy-text-{{ section.id }} * {
      font-size: {{ copy_size }}px;
    }

    .footer-menu-{{ section.id }} {
      margin: 0px;
      display: flex;
      align-items: center;
      justify-content: start;
      width: fit-content;
    }

    .footer-menu-{{ section.id }} li a {
      font-size: {{ bottom_link_size }}px;
    }

    .footer-column-text-{{ section.id }} {
      margin-top: {{ column_text_mt }}px;
    }
  
    .footer-column-text-{{ section.id }} * {
      font-size: {{ column_text_size }}px;
    }

    .footer-scrolling-image-{{ section.id }} {
      width: {{ scrolling_image_width }}px;
    }

    .footer-bottom-row-{{ section.id }} {
      margin-top: {{ bottom_menu_mt }}px;
      flex-direction: row-reverse;
      align-items: center;
    }
  }
  
{%- endstyle -%}

