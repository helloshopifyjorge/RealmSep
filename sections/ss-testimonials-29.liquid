{%- style -%}
  {{ heading_font | font_face: font_display: 'swap' }}
  {{ main_card_title_font | font_face: font_display: 'swap' }}
  {{ main_card_text_font | font_face: font_display: 'swap' }}
  {{ text_font | font_face: font_display: 'swap' }}
  {{ author_font | font_face: font_display: 'swap' }}
  {{ tag_font | font_face: font_display: 'swap' }}
  {{ link_font | font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }
  
  .testimonials-heading-{{ section.id }} {
    text-align: {{ heading_align_mobile }};
  }

  .testimonials-heading-{{ section.id }} * {
    margin: 0px;
    font-size: {{ heading_size_mobile }}px;
    line-height: {{ heading_height }}%;
    color: {{ heading_color }};
    text-transform: unset;
    word-break: break-word;
    font-weight: 700;
  }

  .testimonials-slider-{{ section.id }} {
    position: relative;
    padding-top: {{ image_size_mobile | times: 0.5 | round: 0 }}px !important;
    margin-top: {{ slider_mt_mobile }}px !important;
    margin-left: -{{ padding_horizontal_mobile }}rem !important;
    margin-right: -{{ padding_horizontal_mobile }}rem !important;
    padding-left: {{ padding_horizontal_mobile }}rem !important;
    padding-right: {{ padding_horizontal_mobile }}rem !important;
    padding-bottom: {{ arrow_size_mobile | plus: 20 }}px !important;
  }

  .testimonials-main-card-{{ section.id }} {   
    height: auto !important;
    background-color: {{ main_card_bg_color }};
    border: {{ main_card_border_thickness }}px solid {{ main_card_border_color }} !important;
    border-radius: {{ main_card_radius }}px !important;
    overflow: hidden;
    display: flex !important;
    flex-direction: column;
    justify-content: space-between;
    align-items: {{ main_card_horizontal_align_mobile }};  
    padding: {{ main_card_padding_vertical_mobile }}px {{ main_card_padding_horizontal_mobile }}px !important;
    box-sizing: border-box !important;
  }
  
  .testimonials-main-card-title-{{ section.id }} {
    margin: 0px;
    text-align: {{ main_card_align_mobile }};
    font-size: {{ main_card_title_size_mobile }}px;
    line-height: {{ main_card_title_height }}%;
    color: {{ main_card_title_color }};
    text-transform: unset;
    word-break: break-word;
    cursor: pointer;
  }

  .testimonials-main-card-text-{{ section.id }} {
    margin-top: {{ main_card_text_mt_mobile }}px;
    text-align: {{ main_card_align_mobile }};
  }

  .testimonials-main-card-text-{{ section.id }} * {
    margin: 0px;
    font-size: {{ main_card_text_size_mobile }}px;
    line-height: {{ main_card_text_height }}%;
    color: {{ main_card_text_color }};
    text-transform: unset;
    word-break: break-word;
    cursor: pointer;
  }

  .testimonials-main-card-text-{{ section.id }} p {
    min-height: 10px;
  }

  .testimonials-card-{{ section.id }} {
    height: auto !important;
    background-color: {{ card_bg_color }};
    border: {{ card_border_thickness }}px solid {{ card_border_color }} !important;
    border-radius: {{ card_radius }}px !important;
    display: flex !important;
    flex-direction: column;
    justify-content: space-between;
    align-items: {{ card_horizontal_align_mobile }};  
    padding: {{ card_padding_vertical_mobile }}px {{ card_padding_horizontal_mobile }}px !important;
    box-sizing: border-box !important;
  }

  .testimonials-card-image-{{ section.id }} {
    position: absolute;
    top: -{{ image_size_mobile | times: 0.5 | round: 0 }}px;
    width: {{ image_size_mobile }}px;
    height: {{ image_size_mobile }}px;
    border-radius: {{ image_radius }}px;
    overflow: hidden;
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
  }

  .testimonials-card-image-{{ section.id }} img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials-stars-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: {{ stars_gap }}px;
    justify-content: {{ card_horizontal_align_mobile }};
  }

  .testimonials-stars-{{ section.id }} svg,
  .testimonials-stars-{{ section.id }} img {
    display: block;
    width: {{ stars_size_mobile }}px;
    height: {{ stars_size_mobile }}px;
    object-fit: cover;
  }

  .testimonials-card-text-{{ section.id }} {
    text-align: {{ card_align_mobile }};
    margin-top: {{ text_mt_mobile }}px;
  }
  
  .testimonials-card-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
    word-break: break-word;
  }  

  .testimonials-card-author-{{ section.id }} {
    margin: 0;
    text-align: {{ card_align_mobile }};
    margin-top: {{ author_mt_mobile }}px;
    font-size: {{ author_size_mobile }}px;
    color: {{ author_color }};
    line-height: {{ author_height }}%;
    text-transform: unset;
    word-break: break-word;
  }  

  .testimonials-card-bottom-{{ section.id }} {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: {{ tag_mt_mobile }}px;
  }

  .testimonials-card-tag-{{ section.id }} {
    margin: 0;
    font-size: {{ tag_size_mobile }}px;
    color: {{ tag_color }};
    line-height: {{ tag_height }}%;
    text-transform: unset;
    word-break: break-word;
  }  

  .testimonials-card-link-{{ section.id }} {
    display: block;
    max-width: fit-content;
    margin: 0;
    font-size: {{ link_size_mobile }}px;
    color: {{ link_color }};
    line-height: {{ link_height }}%;
    text-transform: unset;
    word-break: break-word;
    text-decoration: underline;
    font-weight: 700;
  }

  .testimonials-btn-prev-{{ section.id }},
  .testimonials-btn-next-{{ section.id }} {
    display: flex;
    position: absolute;
    bottom: 0px;
    z-index: 2;
    width: {{ arrow_size_mobile }}px;
    height: {{ arrow_size_mobile }}px;
    border: 0px;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_color }};
    border-radius: {{ arrow_radius }}px;
    background: transparent;
    background: {{ arrow_bg_color }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    /* box-shadow: 0px 0px 10px 0px rgba(0,0,0,.15); */
  }

  .testimonials-btn-prev-{{ section.id }} {
    right: calc(50% + 10px);    
  }

  .testimonials-btn-next-{{ section.id }} {
    left: calc(50% + 10px);    
  }

  .testimonials-btn-prev-{{ section.id }} .animate-icon,
  .testimonials-btn-next-{{ section.id }} .animate-icon {
    pointer-events: none;
    place-items: center;
    display: grid;
  }

  .testimonials-btn-prev-{{ section.id }} .animate-icon:before,
  .testimonials-btn-next-{{ section.id }} .animate-icon:before {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ arrow_icon_size_mobile }}px;
    height: {{ arrow_icon_size_mobile }}px;
    transform: rotate(calc(1 * 45deg));
    box-sizing: border-box;
    border-style: solid;
    border: 0px;
    border-right: 2px solid currentColor;
    border-top: 2px solid currentColor;
    position: relative;
    left: -1px;
  }

  .testimonials-btn-prev-{{ section.id }} .animate-icon:before {
    left: unset;
    right: -1px;
    border-right: 0px;
    border-top: 0px;
    border-bottom: 2px solid currentColor;
    border-left: 2px solid currentColor;
  }

  .testimonials-btn-prev-{{ section.id }} .animate-icon:after,
  .testimonials-btn-next-{{ section.id }} .animate-icon:after {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ arrow_icon_size_mobile | minus: 0.3 }}px;
    height: 1.6px;
    transform-origin: center;
    opacity: 0;
    background: currentColor;
    transform: scaleX(.5);
  }

  .testimonials-btn-prev-{{ section.id }} span,
  .testimonials-btn-next-{{ section.id }} span {
    color: {{ arrow_color }};
  }

  .testimonials-btn-prev-{{ section.id }}.swiper-button-disabled,
  .testimonials-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0.5;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .testimonials-heading-{{ section.id }} {
      text-align: {{ heading_align }};
    }

    .testimonials-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .testimonials-slider-{{ section.id }} {
      margin-top: {{ slider_mt }}px !important;
      padding-top: {{ image_size | times: 0.5 | round: 0 }}px !important;
      margin-left: -{{ padding_horizontal }}rem !important;
      margin-right: -{{ padding_horizontal }}rem !important;
      padding-left: {{ padding_horizontal }}rem !important;
      padding-right: {{ padding_horizontal }}rem !important;
      align-items: stretch !important;
      padding-bottom: 0px !important;
    }

    .testimonials-main-card-{{ section.id }} {
      align-items: {{ main_card_horizontal_align }};     
      padding: {{ main_card_padding_vertical }}px {{ main_card_padding_horizontal }}px !important;
    }

    .testimonials-main-card-title-{{ section.id }} {
      text-align: {{ main_card_align }};
      font-size: {{ main_card_title_size }}px;
    }
    
    .testimonials-main-card-text-{{ section.id }} {
      margin-top: {{ main_card_text_mt }}px;
      text-align: {{ main_card_align }};
    }

    .testimonials-main-card-text-{{ section.id }} * {
      font-size: {{ main_card_text_size }}px;
    }

    .testimonials-card-{{ section.id }} {
      align-items: {{ card_horizontal_align }};     
      padding: {{ card_padding_vertical }}px {{ card_padding_horizontal }}px !important;
    }

    .testimonials-card-image-{{ section.id }} {
      width: {{ image_size }}px;
      height: {{ image_size }}px;
      top: -{{ image_size | times: 0.5 | round: 0 }}px;
    }

    .testimonials-stars-{{ section.id }} {
      justify-content: {{ card_horizontal_align }};  
    }

    .testimonials-stars-{{ section.id }} svg,
    .testimonials-stars-{{ section.id }} img {
      width: {{ stars_size }}px;
      height: {{ stars_size }}px;
    }

    .testimonials-card-text-{{ section.id }} {
      text-align: {{ card_align }};
      margin-top: {{ text_mt }}px;
    }

    .testimonials-card-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }  

    .testimonials-card-author-{{ section.id }} {
      text-align: {{ card_align }};
      margin-top: {{ author_mt }}px;
      font-size: {{ author_size }}px;
    }

    .testimonials-card-bottom-{{ section.id }} {
      margin-top: {{ tag_mt }}px;
    }
  
    .testimonials-card-tag-{{ section.id }} {
      font-size: {{ tag_size }}px;
    }

    .testimonials-card-link-{{ section.id }} {
      font-size: {{ link_size }}px;
    }  

    .testimonials-btn-prev-{{ section.id }},
    .testimonials-btn-next-{{ section.id }} {
      top: 50%;
      transform: translateY(-50%);
      bottom: unset;
      width: {{ arrow_size }}px;
      height: {{ arrow_size }}px;
      transition: all 0.25s ease 0s;
      opacity: 0;
    }

    .testimonials-btn-prev-{{ section.id }} {
      left: 5%;
      right: unset;
    }

    .testimonials-btn-next-{{ section.id }} {
      right: 5%;
      left: unset;
    }

    .testimonials-btn-prev-{{ section.id }}.swiper-button-disabled,
    .testimonials-btn-next-{{ section.id }}.swiper-button-disabled {
      opacity: 0;
    }

    .testimonials-slider-{{ section.id }}:hover .testimonials-btn-prev-{{ section.id }},
    .testimonials-slider-{{ section.id }}:hover .testimonials-btn-next-{{ section.id }} {
      transition: all 0.25s ease 0s;
      opacity: 1;
    }

    .testimonials-slider-{{ section.id }}:hover .testimonials-btn-prev-{{ section.id }}.swiper-button-disabled,
    .testimonials-slider-{{ section.id }}:hover .testimonials-btn-next-{{ section.id }}.swiper-button-disabled {
      opacity: 0;
      transition: all 0.25s ease 0s;
    }

    .testimonials-btn-prev-{{ section.id }} .animate-icon:before,
    .testimonials-btn-next-{{ section.id }} .animate-icon:before {
      width: {{ arrow_icon_size }}px;
      height: {{ arrow_icon_size }}px;
    }

    .testimonials-btn-prev-{{ section.id }} .animate-icon:after,
    .testimonials-btn-next-{{ section.id }} .animate-icon:after {
      width: {{ arrow_icon_size | minus: 0.3 }}px;
    } 
  }
  
