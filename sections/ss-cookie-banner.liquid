{% capture var %}{% render 'locksmith-variables', variable: 'access_granted'%}{% endcapture %}{% if var == 'true' %}{% assign locksmith_access_granted = true %}{% else %}{% assign locksmith_access_granted = false %}{% endif %}

                {% if locksmith_access_granted %}
                  <a class="button" href="https://realmoutdoor.com/collections/belgian-pearls" style= "width:50%">EXPLORE OUR COLLECTION</a>
                  {% else %}<br><a class="button" href="https://realmoutdoor.com/pages/register" style= "width:50%">REGISTER TO ACCESS PRICING</a>
  {% endif %}
{% schema %}
{
  "name": "Register",
  "settings": [
    {
      "type":"header",
      "content":"Cookie acceptance last 30 days.",
      "info":"Hide an unhide section to display again."
    },
    {
      "type":"header",
      "content":"Settings"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text size",
      "default": 16,
      "min": 10,
      "max": 50,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>üç™ We use cookies to ensure the best possible user experience. Please agree to our cookies policy by clicking 'Accept'.</p>"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Max width",
      "default": 400,
      "min": 0,
      "max": 1000,
      "step": 20,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "default": 24,
      "min": 0,
      "max": 80,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "vertical_padding",
      "label": "Vertical padding",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "horizontal_padding",
      "label": "Horizontal padding",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "placement",
      "label": "Placement",
      "default": "bottom-left",
      "options": [
        {
          "value": "bottom-left",
          "label": "Bottom Left"
        },
        {
          "value": "bottom-right",
          "label": "Bottom Right"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "enable_shadow",
      "label": "Enable shadow",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "SS - Cookie Banner",
      "blocks": [
        {
          "type": "accept_button"
        },
        {
          "type": "decline_button"
        }
      ]
    }
  ],
  "max_blocks": 2,
  "blocks": [
    {
      "type": "accept_button",
      "name": "Accept button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Accept"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button Color",
          "default": "#d99d42"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Button Text Color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "button_border_color",
          "label": "Button Border Color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "button_border_width",
          "label": "Button Border Width",
          "min": 0,
          "max": 10,
          "unit": "px",
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "button_border_radius",
          "label": "Button Border Radius",
          "min": 0,
          "max": 100,
          "unit": "px",
          "step": 1,
          "default": 24
        }
      ]
    },
    {
      "type": "decline_button",
      "name": "Decline button",
      "settings": [
        {
          "type": "url",
          "id": "redirect_url",
          "label": "Decline Redirect URL"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Decline"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button Color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Button Text Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "button_border_color",
          "label": "Button Border Color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "button_border_width",
          "label": "Button Border Width",
          "min": 0,
          "max": 10,
          "unit": "px",
          "step": 1,
          "default": 1
        },
        {
          "type": "range",
          "id": "button_border_radius",
          "label": "Button Border Radius",
          "min": 0,
          "max": 100,
          "unit": "px",
          "step": 1,
          "default": 24
        }
      ]
    }
  ]
}
{% endschema %}
